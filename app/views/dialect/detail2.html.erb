<%= render 'common/header'%>

<!-- Main jumbotron for a primary marketing message or call to action -->
<div class="jumbotron">
  <div class="container">
    <h1><%= @dialect.dialect_word %> </h1>
  </div>
</div>

<div class="container">
  <!-- Example row of columns -->
  <div class="row">
    <div class="col-md-4">
      <h2>意味</h2>
      <% @means.each do |m|  %>
      <div> <%= m.mean_word %> </div>
      <p/>
      <% end%>
      <%= form_tag({:controller => 'dialect' , :action => 'add_mean', :id => params[:id]  }) do %>
      <div class="field"><%= text_field :mean , :mean_word%></div>
      <div class="actions"><%= submit_tag "追加" %></div>
      <% end %>
    </div>

    <div class="col-md-4">
      <h2>例</h2>
      <%  @examples.each do |e|  %>
      <div> <%= e.example_word %> </div>
      <p/>
      <% end%>
      <%= form_tag({:controller => 'dialect' , :action => 'add_example', :id => params[:id] }) do %>
      <div class="field"><%= text_field :example , :example_word%></div>
      <div class="actions"><%= submit_tag "追加" %></div>
      <% end %>
    </div>

    <div class="col-md-4">
      <h2>コメント</h2> 
      <% @comments.each do |ct|  %>
      <div> <%= ct.comment_word %></div>
      <p/>
      <% end%>
      <%= form_tag({:controller => 'dialect' , :action => 'add_comment' , :id => params[:id]}) do %>
      <div class="field"><%= text_field :comment , :comment_word%></div>
      <div class="actions"><%= submit_tag "追加" %></div>
      <% end %>
    </div>
  </div>

</div> <!-- /container -->

<%= render 'common/footer' %>

